//CSS(CODE):
body {
  margin: 0;
  font-family: Arial, sans-serif;
}

#navbar {
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #333;
  z-index: 1000; /* Ensure the menu stays on top of other content */
  transition: background-color 0.3s ease;
}

#navbar ul {
  list-style-type: none;
  margin: 0;
  padding: 10px 0;
  text-align: center;
}

#navbar ul li {
  display: inline;
  margin: 0 15px;
}

#navbar ul li a {
  color: #fff;
  text-decoration: none;
  transition: color 0.3s ease;
}

#navbar ul li a:hover {
  color: #ff7f50; /* Change color on hover */
}

#content {
  padding-top: 50px; /* Ensure content is not hidden behind the fixed navbar */
}

.scrolled {
  background-color: #555; /* Change background color when scrolled */
}
//Javascript(code,)
window.addEventListener('scroll', function() {
  var navbar = document.getElementById('navbar');
  if (window.scrollY > 0) {
    navbar.classList.add('scrolled');
  } else {
    navbar.classList.remove('scrolled');
  }
});
